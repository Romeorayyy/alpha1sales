{
  "version": 2,
  "public": true,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "client/build"
      }
    },
    {
      "src": "api/send-email.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1.js"
    },
    {
      "src": "/static/(.*)",
      "headers": { "cache-control": "public,max-age=31536000,immutable" },
      "dest": "/client/build/static/$1"
    },
    {
      "src": "/(.*\\.(css|js|ico))",
      "headers": { "cache-control": "public,max-age=31536000,immutable" },
      "dest": "/client/build/$1"
    },
    {
      "src": "/(?!api|static)(.*)",
      "dest": "/client/build/index.html",
      "continue": true
    }
  ]  
}
