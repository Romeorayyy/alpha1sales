{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node",
      "config": {
        "outputDirectory": "client/build"
      }
    }
  ],
  "routes": [
    {
      "src": "/send-email",
      "dest": "/api/send-email"
    },
    {
      "src": "/(.*)",
      "dest": "/client/build/index.html"
    }
  ]
}
